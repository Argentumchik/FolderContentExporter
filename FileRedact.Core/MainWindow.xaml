<Window x:Class="FileRedact.Core.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileRedact.Core"
        mc:Ignorable="d"
        Title="MainWindow" Height="530" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="400" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="560" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Button Grid.Row="1" 
                Grid.Column="0" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Height="40" 
                Width="105" 
                Margin="8,50,0,0" 
                Content="Open folder" 
                Command="{Binding SelectFolderCommand}"/>
        <Button Grid.Row="2" 
                Grid.Column="1" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Height="40" 
                Width="96" 
                Content="Load files" 
                Command="{Binding LoadFileCommand}"/>
        <Button Grid.Row="2" 
                Grid.Column="2"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="38"
                Width="76"
                Margin="14,0,0,0"
                Content="Export"
                Command="{Binding ExportFileCommand}"/>


        <Label Grid.Row="0" 
               Grid.Column="1" 
               VerticalAlignment="Center" 
               Height="25"
               Margin="10,0,10,0" 
               Content="{Binding SelectedFolder}" />
        <Label Grid.Row="0" 
               Grid.Column="0" 
               HorizontalAlignment="Right" 
               VerticalAlignment="Center"
               Width="64" 
               Content="Path:" 
               FontSize="12"/>

        <TextBox Grid.Row="2"
                 Grid.Column="1"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 VerticalContentAlignment="Center"
                 Height="28"
                 Width="120"
                 Margin="331,10,0,0"
                 FontSize="15"
                 TextWrapping="Wrap"
                 Text="{Binding ExportFileName, UpdateSourceTrigger=PropertyChanged}"/>

        <CheckBox Grid.Row="1" 
                  HorizontalAlignment="Center" 
                  VerticalAlignment="Top" 
                  Margin="0,95,0,0"
                  Content="Include sub"
                  IsChecked="{Binding SubfoldersIncluded, Mode=TwoWay}"/>


        <DataGrid
                  Grid.Row="1"
                  Grid.Column="1"
                  ItemsSource="{Binding Files}"
                  AutoGenerateColumns="False" Margin="0,0,0,10">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Имя"
                                    Binding="{Binding Name}" />
                <DataGridTextColumn Header="Расширение"
                                    Binding="{Binding Extention}" />
                <DataGridTextColumn Header="Размер"
                                    Binding="{Binding Size}" />
                <DataGridTextColumn Header="Путь"
                                    Binding="{Binding Path}" />
                <DataGridTextColumn Header="Создан"
                                    Binding="{Binding Created}" />
                <DataGridTextColumn Header="Изменён"
                                    Binding="{Binding Modified}" />
            </DataGrid.Columns>
        </DataGrid>
        
        <ComboBox Grid.Row="2"
                  Grid.Column="1"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  VerticalContentAlignment="Center"
                  Height="28"
                  Width="79"
                  Margin="456,10,0,0"
                  ItemsSource="{Binding ExportModes}"
                  SelectedItem="{Binding SelectedExportMode}"/>
    </Grid>
</Window>
