<Window x:Class="FolderContentExporter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FolderContentExporter"
        mc:Ignorable="d"
        Title="MainWindow" Height="530" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="400" />
            <RowDefinition Height="70" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="560" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Button Grid.Row="1" 
                Grid.Column="0" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Height="40" 
                Width="105" 
                Margin="8,50,0,0" 
                Content="Open folder" 
                Command="{Binding SelectFolderCommand}"/>
        <Button Grid.Row="2" 
                Grid.Column="1" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Height="40" 
                Width="96" 
                Content="Load files" 
                Command="{Binding LoadFileCommand}"/>
        <Button Grid.Row="2" 
                Grid.Column="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Height="38"
                Width="76"
                Margin="14,0,0,0"
                Content="Export"
                Command="{Binding ExportFileCommand}"/>
        <Button Grid.Row="2" Content="Cancel" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Height="40" Width="90" IsEnabled="{Binding IsLoading}" Command="{Binding CancelCommand}"/>



        <Label Grid.Row="0" 
               Grid.Column="1" 
               VerticalAlignment="Center" 
               Height="25"
               Margin="10,0,10,0" 
               Content="{Binding SelectedFolder}" />
        <Label Grid.Row="0" 
               Grid.Column="0" 
               HorizontalAlignment="Right" 
               VerticalAlignment="Center"
               Width="64" 
               Content="Path:" 
               FontSize="12"/>

        
        <TextBlock Grid.Row="2"
                   Grid.Column="1"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="120,40,0,0"
                   Height="20"
                   Width="180"
                   Text="{Binding Progress, StringFormat=Обработано файлов: {0}}"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="275,40,0,0" Grid.Row="2" TextWrapping="Wrap" Visibility="{Binding IsCancelled}" Text="(отменено)" VerticalAlignment="Top"/>



        <CheckBox Grid.Row="1" 
                  HorizontalAlignment="Center" 
                  VerticalAlignment="Top" 
                  Margin="0,95,0,0"
                  Content="Include sub"
                  IsChecked="{Binding SubfoldersIncluded, Mode=TwoWay}"/>


        <DataGrid
                  Grid.Row="1"
                  Grid.Column="1"
                  ItemsSource="{Binding Files}"
                  AutoGenerateColumns="False" Margin="0,0,0,10">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Имя"
                                    Binding="{Binding Name}" />
                <DataGridTextColumn Header="Размер"
                                    SortMemberPath="Size"
                                    Binding="{Binding SizeDisplay}" />
                <DataGridTextColumn Header="Расширение"
                                    Binding="{Binding Extension}" />
                <DataGridTextColumn Header="Путь"
                                    Binding="{Binding Path}" />
                <DataGridTextColumn Header="Создан"
                                    Binding="{Binding Created}" />
                <DataGridTextColumn Header="Изменён"
                                    Binding="{Binding Modified}" />
            </DataGrid.Columns>
        </DataGrid>

        <ProgressBar Grid.Row="2"
                     Grid.Column="1"
                     HorizontalAlignment="Left"
                     Height="24"
                     Margin="120,10,0,0"
                     VerticalAlignment="Top"
                     Width="182"
                     Minimum="0"
                     Maximum="{Binding TotalFiles}"
                     Value="{Binding Progress}"/>
    </Grid>
</Window>
